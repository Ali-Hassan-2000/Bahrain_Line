<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= showCategory.CategoryName %></title>
    <link rel="icon" type="image/png" href="https://res.cloudinary.com/dnmdmz7qo/image/upload/v1759391673/shop_logo_g70q1m.png">
    <link rel="stylesheet" href="/styles.css"> 
  </head>
  <body>
    <header>
      <nav class="navbar section-content">
        <%- include('../partials/_navbar.ejs') %>
      </nav>
      <nav class="navbar">
        <%- include('../partials/_categories.ejs') %>
      </nav>
    </header>

    <main>
      <section class="menu-section">
        <div class="section-content">
          <ul class="menu-list">
            <% Items.forEach((item) => { %>
              <% if(item.ItemCategoryId.equals(showCategory._id)){ %>
                <li class="menu-item">
                  <a href="/items/<%= item._id %>">
                    <img src="<%= item.ItemImg[0].url %>" alt="item img" class="menu-image">
                    <h3 class="name"><%= item.ItemName %></h3>
                    <h4 class="text"><%= item.ItemPrice %></h4>
                  </a>
                </li>
              <% }; %>
            <% }); %>
          </ul>
        </div>
      </section>
      
    </main>

    <% if(user){ %>
      <div class="admin-actions">
        <form action="/items/<%= showCategory._id %>?_method=DELETE" method="POST" class="delete-form">
          <button type="submit" class="btn delete-btn">Delete this Category</button>
        </form>
        
        <a href="/items/<%= showCategory._id %>/edit" class="btn edit-btn">Edit this Category</a>
      </div>
    <% } %>

    <%- include('../partials/_footer.ejs') %>

    <%- include('../partials/_toggle-categories.ejs') %>

  </body>
</html>