<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
</head>
<body>
    <h1>Welcome to Our Shop</h1>
    <p>Check out our amazing products!</p>

    <%- include('../partials/_navbar.ejs') %>
    <%- include('../partials/_categories.ejs') %>

    <a href="/items/new_item"><button>Add new Item</button></a>
    <a href="/items/new_category"><button>Add new Category</button></a>
    
    <% items.forEach((item) => { %>
      <div>
        <a href="/items/<%= item._id %>"><!-- there is a problem with mongo DB file name (auto. adds %20 for spacing) -->
          <img src="../../files/img/items/ <%= item.ItemImg %> " alt="item img">
        </a>
        <p>View more details</p>
      </div>

    <% }); %>


    <%- include('../partials/_footer.ejs') %>
</body>
</html>